<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="kim" class="com.test03.Developer">
        <constructor-arg index="0" name="name" value="kim"/>
        <constructor-arg index="1" name="salary" value="5000000"/>
        <property name="dept" value="Dev"/>
    </bean>

    <bean id="kang" class="com.test03.Engineer">
        <constructor-arg index="0" value="kang" name="name"/>
        <constructor-arg index="1" value="1980000" name="salary"/>
        <property name="dept" value="Tec"/>
    </bean>
</beans>